@model OCOO.Models.FirmBilling
@{
    ViewData["Title"] = "Electricity Bill Details";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}
<style>
    .table-responsive {
        height: calc(100vh - 260px);
        overflow: auto;
    }

    table thead {
        position: sticky;
        top: 0;
    }

    .table th, .table thead th {
        color: #fff;
        vertical-align: middle;
        background: #21aee4 !important;
        border: 1px solid #1b9aca;
        text-align: center;
        padding: 5px 10px;
    }

    .table td {
        padding: 10px 10px;
        vertical-align: middle;
        text-align: right;
    }
</style>

<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-6 align-self-center">
            <h3 class="text-themecolor">Electricity Bill Report</h3>
        </div>
        <div class="col-md-6 align-self-right">
            <a href="/FirmBilling/FirmBillingRequest" class="btn btn-sm btn-xs btn-warning ml-2 float-right"><i class="fa fa-arrow-left"> </i> Back</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body p-3">
                @if (Model != null && Model.dtDetails1!=null&& Model.dtDetails1.Rows.Count > 0)
                {
                    <h2 class="">Payment of @ViewBag.MonthName - @ViewBag.Year (@Model.dtDetails1.Rows[0]["Zone"].ToString() - Zone)</h2>
                }
                <div class="table-responsive" id="data-table">
                    <table class="table table-striped table-bordered">
                        <thead>

                            <tr>
                                <th>Sn</th>
                                <th>STP</th>
                                <th>Name Of IPS/SPS/STP</th>
                                <th>Month Start Date </th>
                                <th>Month End Date</th>
                                <th>Month Start Meter Reading </th>
                                <th>Month End Meter Reading </th>
                                <th>Electricity Unit for the Month</th>
                                <th>Unit Rate for the Month</th>
                                <th>Fix Charges</th>
                                <th>Other Charges</th>
                                <th>Late Payment/Penalty</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.dtDetails != null)
                                {
                                    if (Model.dtDetails.Rows.Count > 0)
                                    {
                                        for (int i = 0; i < Model.dtDetails.Rows.Count; i++)
                                        {
                                            <tr>
                                                <td>@(i + 1)</td>
                                                <td>@Model.dtDetails.Rows[i]["StpName"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["Name"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["MonthStartDate"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["MonthEndDate"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["MonthStartMeterReading"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["MonthEndMeterReading"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["TotalMeterReading"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["UnitRate"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["FixCharges"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["OtherCharges"].ToString()</td>
                                                <td>@Model.dtDetails.Rows[i]["Penalty"].ToString()</td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="12" class="alert alert-warning text-center">No Record Found</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
