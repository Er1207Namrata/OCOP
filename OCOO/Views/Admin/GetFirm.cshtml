        </div>
    </div>

    <div class="container-fluid">
        <div class="card">
        <div class="card-body">
            <form asp-action="GetFirm" asp-controller="Admin">
                <div class="row">
                    @*<div class="col-md-3">
                    <label>City</label>
                    <input type="hidden" name="Pk_ZoneId" value="@TempData["Pk_ZoneId"]" />
                    @Html.DropDownListFor(m => m.Pk_CityId, new SelectList(ViewBag.ddlCity, "Value", "Text"), new {@class = "form-control", @onchange = "return fGetfirmByCity();"})
                    </div>*@
                    <div class="col-md-3">
