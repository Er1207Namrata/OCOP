@{
    ViewData["Title"] = "View Document";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}

<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-6 align-self-center">
            <h3 class="text-themecolor">View Document</h3>
        </div>
        <div class="col-md-6 align-self-right">
            <span class="float-right">
                <a href="javascript:history.back()" class="btn btn-sm btn-info text-white"><i class="fa fa-backward mdi-15px"></i> Back</a>
                <a href="@ViewBag.DocumentFile" download class="btn btn-sm btn-info"><i class="fa fa-download mdi-15px"></i> Download</a>               
            </span>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body pb-0">
                <iframe class="wrapper" height="1000" name="iframe" scrolling="auto" src="@ViewBag.DocumentFile" width="100%">This option will not work correctly. Unfortunately, your browser does not support inline frames.</iframe>
            </div>
        </div>
    </div>
</div>
