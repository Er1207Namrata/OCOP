
@{
    ViewData["Title"] = "ViewDocfile";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}

@if (ViewBag.filepath != null && ViewBag.filepath != "NA")
{
    <div class="page-wrapper">
        <div class="row page-titles">
            <div class="col-md-6 align-self-center">
                <h3 class="text-themecolor">Document</h3>
            </div>

            <div class="col-md-6 align-self-right">
                <span class="float-right">
                    <a href="@ViewBag.filepath" download class="btn btn-info btn-sm"><i class="fa fa-download mdi-15px"></i> Download</a>
                    <a href="/FirmReport/BillDocument" class="btn btn-info btn-sm">Back</a>
                </span>
            </div>
        </div>
        <div class="container-fluid">
            <div class="card">
                <div class="card-body pb-0">
                    <iframe class="wrapper" height="1000" name="iframe" scrolling="auto" src="@ViewBag.filepath" width="100%">This option will not work correctly. Unfortunately, your browser does not support inline frames.</iframe>
                </div>
            </div>
        </div>
    </div>
}
