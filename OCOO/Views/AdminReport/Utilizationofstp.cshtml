@model OCOO.Models.Utilization
@{
    ViewData["Title"] = "Utilizationofstp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-8 align-self-center">
            <h3 class="text-themecolor">Utilization Of STP</h3>
        </div>
        <div class="col-md-4 align-self-right">
            <span class="float-right"><a data-toggle="collapse" href="#searchblock" title="Search" role="button" aria-expanded="true" aria-controls="searchblock" class="btn btn-sm btn-xs btn-primary"><i class="fa fa-filter"></i></a></span>
        </div>

    </div>
    <div class="container-fluid">
        <div class="collapse" id="searchblock">
            <div class="card">
                <form asp-controller="AdminReport" asp-action="Utilizationofstp">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Zone</label>
                                    @Html.DropDownListFor(m => m.Pk_ZoneId, new SelectList(ViewBag.ddlZone, "Value", "Text"), new { @class = "form-control",@onchange="return fGetFirmList()" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Firm</label>
                                    @Html.DropDownListFor(m => m.Fk_FirmId, new SelectList(ViewBag.ddlFirm, "Value", "Text"), new { @class = "form-control",@onchange="return fGetSTPList()"})
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>STP</label>
                                    @Html.DropDownListFor(m => m.Fk_STPId, new SelectList(ViewBag.ddlSTP, "Value", "Text"), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Month</label>
                                    <div class="input-group">
                                        @Html.DropDownListFor(m => m.Fk_MonthId, new SelectList(ViewBag.ddlMonth, "Value", "Text"), new {@class = "form-control"})
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>From Date</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control mydatepicker" asp-for="FromDate" placeholder="dd/mm/yyyy" readonly>
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="icon-calender"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>To Date</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control mydatepicker" asp-for="ToDate" placeholder="dd/mm/yyyy" readonly>
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="icon-calender"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 p-4">
                                <div class="form-group mt-2">
                                    <button type="submit" class="btn btn-primary  btn-xs btn-sm" id="Submit" value="Search" name="btnSubmit"><i class="fa fa-search"> Search</i></button>
                                    <input type="button" value="Reset" class="btn btn-secondary btn-xs btn-sm" onclick="return Getreset();">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">
            <form asp-controller="AdminReport" asp-action="Utilizationofstp">
            <div class="card-body p-3 pb-20">
                <div class="table-responsive">
                    <table class="table table-striped footable" id="data-table">
                        <thead>
                            <tr>
                                <th class="text-center">S.N</th>
                                <th class="text-center">Firm Name</th>
                                <th class="text-center">STP Name</th>
                                <th class="text-center">Zone</th>
                                <th class="text-center">Invoice Date</th>
                                <th class="text-center">Capacity</th>
                                <th class="text-center">Flow</th>
                                <th class="text-center">Utilization Of STP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.dtDetails != null)
                                {
                                    if (Model.dtDetails.Rows.Count > 0)
                                    {
                                        for (int i = 0; i < Model.dtDetails.Rows.Count; i++)
                                        {
                                            <tr>
                                                <td class="text-center">@(i + 1)</td>
                                                <td class="text-center">@Model.dtDetails.Rows[i]["FirmName"].ToString()</td>
                                                <td class="text-center">@Model.dtDetails.Rows[i]["stpName"].ToString()</td>
                                                <td class="text-center">@Model.dtDetails.Rows[i]["Zone"].ToString()</td>
                                                <td class="text-center">@Model.dtDetails.Rows[i]["invoicedate"].ToString()</td>
                                                <td class="text-right">@Model.dtDetails.Rows[i]["Capacity"].ToString()</td>
                                                <td class="text-right">@Model.dtDetails.Rows[i]["Flow"].ToString()</td>
                                                    <td class="text-right">
                                                        @Model.dtDetails.Rows[i]["UtilizationOfSTP"].ToString() %
                                                    </td>
                                            </tr>
                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>


            </div>
               </form>
        </div>
    </div>
</div>
@{
    Html.RenderPartial("_ViewInvoicebillDetail");
    Html.RenderPartial("_VerifiedMonthlyBill");

}
<script src="~/script/frimstpbind.js"></script>
    <script>
        $(document).ready(function () {
            debugger;
            var firmID = $('#firmtemp').val();
            var stpID = $('#stptemp').val();
            if (firmID != null && stpID != null) {
                fGetFirmList(firmID);
                fGetSTPList(firmID, stpID);
            }
        });

    function Getreset() {
        debugger;
        $('#Pk_ZoneId').val(null);
        $('#Fk_FirmId').val('0');
        $('#Fk_STPId').val('0');
        $('#Fk_MonthId').val('0');
        $('#FromDate').val('');
        $('#ToDate').val('');
        fGetFirmList();
        fGetSTPList();

    }
</script>
