@model OCOO.Models.FirmDetails
@{
    ViewData["Title"] = "Notification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table-responsive {
        height: calc(100vh - 280px);
        overflow: auto;
    }

    table thead {
        position: sticky;
        top: 0;
        z-index: 10;
    }

    table {
        border-collapse: unset !important;
    }
</style>

<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-6 align-self-center">
            <h3 class="text-themecolor">Notification</h3>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body p-3">
                <div class="table-responsive" id="data-table">
                    @*  <table class="table table-striped table-bordered" cellspacing="0" cellpadding="0" border="0">*@
                    <table class="table table-striped footable" id="data-table">
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>Date</th>
                                <th>Message</th>
                            </tr>                           
                        </thead>

                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.dtDetails != null && Model.dtDetails.Rows.Count > 0)
                                {
                                    for (int i = 0; i < Model.dtDetails.Rows.Count; i++)
                                    {
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@Model.dtDetails.Rows[i]["date"].ToString()</td>
                                            <td>@Model.dtDetails.Rows[i]["Message"].ToString()</td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="29" class="alert alert-warning text-center">No Record Found</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @{
        Html.RenderPartial("_GetTestingAgency");
    }
</div>
<script src="~/script/showtestingagency.js"></script>

