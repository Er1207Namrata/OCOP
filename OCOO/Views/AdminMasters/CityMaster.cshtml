@model OCOO.Models.CityMasterDTO
@{
    ViewData["Title"] = "CiryMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-6 align-self-center">
            <h3 class="text-themecolor">City Master</h3>
        </div>

    </div>
    <div class="container-fluid">
        <div class="card">
            <form asp-action="">
                <div class="card-body p-3 pb-20">
                    <div class="table-responsive">
                        <table class="table table-striped footable">
                            <thead>
                                <tr>
                                    <th>SN.</th>
                                    <th>City</th>
                                    <th>Zone</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                    if (Model.dtDetails != null)
                                        if (Model.dtDetails.Rows.Count > 0)
                                            for (int i = 0; i < Model.dtDetails.Rows.Count; i++)
                                            {
                                                <tr>
                                                    <td>@(i + 1)</td>
                                                    <td>@Model.dtDetails.Rows[i]["City"].ToString()</td>
                                                    <td>@Model.dtDetails.Rows[i]["Zone"].ToString()</td>
                                                </tr>
                                            }
                                        else
                                        {
                                            <tr>
                                                <td colspan="3" class="text-center bg-white">
                                                    <div class="alert alert-warning text-center">
                                                        No Records Found !!
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>    
</div>


