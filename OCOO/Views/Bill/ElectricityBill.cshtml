@model OCOO.Models.FirmMasters.Deduction
@{
    ViewData["Title"] = "ElectricityBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-6 align-self-center">
            <h3 class="text-themecolor">Electricity Billing</h3>

        </div>
    </div>
    <div class="container-fluid">

        <div class="card">
            <div class="card-body p-3 pb-20">
                <div class="table-responsive" id="data-table">
                    <table class="table table-striped footable">
                        <thead>
                            <tr>
                                <th>Sn</th>
                                <th>Name</th>
                                <th>STP</th>
                                <th>Penalty</th>
                                <th>Other Charges</th>
                                <th>Fix Charges</th>
                                <th>Unit Rate</th>
                                <th>Month End Meter Reading</th>
                                <th>Month Start Meter Reading</th>
                                <th>Total Meter Reading</th>
                                <th>Month Start Date</th>
                                <th>Month End Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null && Model.dtDetails != null && Model.dtDetails.Rows.Count > 0)
                            {
                                for (int i = 0; i < Model.dtDetails.Rows.Count; i++)
                                {
                                    <tr>
                                        <td class="text-center">@(i + 1)</td>
                                        <td class="text-center">@Model.dtDetails.Rows[i]["Name"].ToString()</td>
                                        <td class="text-center">@Model.dtDetails.Rows[i]["StpName"].ToString()</td>
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["Penalty"].ToString()</td>
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["OtherCharges"].ToString()</td>
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["FixCharges"].ToString()</td>
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["UnitRate"].ToString()</td>
                                     <td class="text-center nowrap">@Model.dtDetails.Rows[i]["MonthEndMeterReading"].ToString()</td>
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["MonthStartMeterReading"].ToString()</td>
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["TotalMeterReading"].ToString()</td>
                                       
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["MonthStartDate"].ToString()</td>
                                        <td class="text-center nowrap">@Model.dtDetails.Rows[i]["MonthEndDate"].ToString()</td>
                                        
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


