
@{
    ViewData["Title"] = "Event";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section class="page-header page-header-modern bg-color-light-scale-1 page-header-lg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 align-self-center p-static order-2 text-center">
                <h1 class="font-weight-bold text-dark">Gallery</h1>
            </div>
            <div class="col-md-12 align-self-center order-1">
                <ul class="breadcrumb d-block text-center">
                    <li><a href="~/home/index">Home</a></li>
                    <li class="active">Gallery</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<div class="container pt-3 pb-2">
    <div class="row pt-2">
        <div class="col-lg-12">
            <div class="tabs tabs-center">
                <ul class="nav nav-tabs justify-content-center" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" href="#images" data-bs-toggle="tab" aria-selected="true" role="tab">Photos</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" href="#videos1" data-bs-toggle="tab" aria-selected="false" tabindex="-1" role="tab">Videos</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="images" class="tab-pane active" role="tabpanel">
                        <div class="row  pb-3">
                            <div class="lightbox col-md-3 mb-3 px-0 " data-plugin-options="{'delegate': 'a', 'type': 'image', 'gallery': {'enabled': true}, 'mainClass': 'mfp-with-zoom', 'zoom': {'enabled': true, 'duration': 300}}">
                                <a class="d-inline-block img-thumbnail img-thumbnail-no-borders img-thumbnail-hover-icon mb-1 me-1" href="~/img/g2.jpg">
                                    <img class="img-fluid" src="~/img/g2.jpg" alt="Image" width="250" height="250">
                                </a>
                            </div>
                            <div class="lightbox col-md-3 mb-3 px-0 " data-plugin-options="{'delegate': 'a', 'type': 'image', 'gallery': {'enabled': true}, 'mainClass': 'mfp-with-zoom', 'zoom': {'enabled': true, 'duration': 300}}">
                                <a class="d-inline-block img-thumbnail img-thumbnail-no-borders img-thumbnail-hover-icon mb-1 me-1" href="~/img/g5.jpg">
                                    <img class="img-fluid" src="~/img/g5.jpg" alt="Image" width="250" height="250">
                                </a>
                            </div>
                            <div class="lightbox col-md-3 mb-3 px-0 " data-plugin-options="{'delegate': 'a', 'type': 'image', 'gallery': {'enabled': true}, 'mainClass': 'mfp-with-zoom', 'zoom': {'enabled': true, 'duration': 300}}">
                                <a class="d-inline-block img-thumbnail img-thumbnail-no-borders img-thumbnail-hover-icon mb-1 me-1" href="~/img/g6.jpg">
                                    <img class="img-fluid" src="~/img/g6.jpg" alt="Image" width="250" height="250">
                                </a>
                            </div>

                        </div>
                    </div>
                    <div id="videos1" class="tab-pane" role="tabpanel">
                        <div class="row">
                            <div class="col-md-4">
                                <div>
                                    <iframe width="100%" height="300" src="https://www.youtube.com/embed/H-UmJgzY380" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div>
                                    <iframe width="100%" height="300" src="https://www.youtube.com/embed/XuPJWJmdVKU" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

