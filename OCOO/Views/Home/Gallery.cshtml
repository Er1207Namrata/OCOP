
@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="page-header page-header-modern bg-color-light-scale-1 page-header-lg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 align-self-center p-static order-2 text-center">
                <h1 class="font-weight-bold text-dark">Event Gallery</h1>
            </div>
            <div class="col-md-12 align-self-center order-1">
                <ul class="breadcrumb d-block text-center">
                    <li><a href="~/home/index">Home</a></li>
                    <li class="active">Event Gallery</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<div class="container pt-3 pb-2">

    <div class="row pt-2">
        <div class="col-lg-12 order-1 order-lg-2 page-1">
            <div class="row  pb-3">
                <div class="row portfolio-list sort-destination" data-sort-id="portfolio">
                    <div class="col-12 col-sm-6 col-lg-4 isotope-item ">
                        <div class="portfolio-item">
                            <a href="~/home/Event">
                                <span class="thumb-info thumb-info-lighten border-radius-5">
                                    <span class="thumb-info-wrapper border-radius-5">
                                        <img src="~/img/g6.jpg" class="img-fluid border-radius-5" alt="">
                                        <span class="thumb-info-title">
                                            Events
                                        </span>
                                    </span>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>












